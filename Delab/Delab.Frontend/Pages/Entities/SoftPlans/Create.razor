@page "/softplans/create"
@attribute [Authorize(Roles = "Admin")]

@if (_softplan is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <Form SoftPlan="_softplan"
                  OnSubmit="_Create"
                  ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}