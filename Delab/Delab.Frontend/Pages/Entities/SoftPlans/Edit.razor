@page "/softplans/edit/{Id:int}"
@attribute [Authorize(Roles = "Admin")]

@if (_softplan is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <Form SoftPlan="_softplan"
                  OnSubmit="_Edit"
                  ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}
