@page "/corporations/edit/{Id:int}"
@attribute [Authorize(Roles = "Admin")]

@if (Corporation is null)
{
    <Loading />
}
else
{
        ﻿<MudDialog MaxWidth="MaxWidth.large" FullWidth="True">
        <DialogContent>
            <Form @ref=Form
                  IsEditControl="true"
                  Corporation="Corporation"
                  OnSubmit="_Edit"
                  ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}