    <div class="container-fluid">
        <a class="navbar-brand" href="">PORTAL</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
